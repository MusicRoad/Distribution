{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "allOf": [
    {
      "$ref": "instrument/base/schema.json"
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "enum": ["application/x.choice+json"]
        },
        "leftHanded": {
          "type": "boolean",
          "default": false
        },
        "headstock": {
          "type": {
            "enum": []
          },
          "default": ""
        },
        "body": {
          "type": {
            "enum": []
          },
          "default": ""
        },
        "amplification": {
          "type": {
            "enum": []
          },
          "default": ""
        },
        "strings": {
          "type": "number",
          "default": 6
        },
        "frets": {
          "type": "number",
          "default": 19
        },
        "tuning": {

        }
      },
      "required": ["strings", "frets", "tuning"]
    }
  ]
}
