{% extends "ClarolineCoreBundle:Desktop:layout.html.twig" %}

{% block stylesheets %}
    {# Claroline CSS #}
    {{ parent() }}

    {# Tool styles #}
    <link rel="stylesheet" type="text/css" href="{{ themeAsset('music-road-distribution-plugin-theory-references-tool.css') }}" />
{% endblock %}

{# Title of the Page #}
{% block title %}
    {{ 'music_references' | trans({}, 'tools') }}
{% endblock %}

{# Content of the Page #}
{% block content %}
    {# The react UI will be attached to this element #}
    <div class="page-container references-container"></div>
{% endblock %}

{% block javascripts %}
    {# Claroline JS #}
    {{ parent() }}

    {# Translations #}
    <script src="{{ url('bazinga_jstranslation_js', { 'domain': 'tools' }) }}"></script>

    {# Tool UI #}
    <script src="{{ hotAsset('music-road-distribution-plugin-theory-references-tool') }}"></script>
{% endblock %}
