{% extends "ClarolineCoreBundle:Desktop:layout.html.twig" %}

{% block stylesheets %}
    {# Claroline CSS #}
    {{ parent() }}

    {# Tool styles #}
    <link rel="stylesheet" type="text/css" href="{{ themeAsset('claroline-distribution-plugin-music-book-song-book-tool.css') }}" />
{% endblock %}

{# Title of the Page #}
{% block title %}
    {{ 'claro_song_book' | trans({}, 'tools') }}
{% endblock %}

{# Override breadcrumbs #}
{% block breadcrumb %}
    {{
    macros.breadcrumbs([{
        'name': 'desktop'|trans({}, 'platform'),
        'href': path('claro_desktop_open')
    }, {
        'name': 'claro_song_book'|trans({}, 'tools'),
        'href': ''
    }])
    }}
{% endblock %}

{# Content of the Page #}
{% block section_panel %}
    <div id="song-book"></div>
{% endblock %}

{% block javascripts %}
    {# Claroline JS #}
    {{ parent() }}

    {# Translations #}
    <script src="{{ url('bazinga_jstranslation_js', { 'domain': 'tools' }) }}"></script>

    {# Tool UI #}
    <script src="{{ hotAsset('dist/claroline-distribution-plugin-music-book-song-book-tool.js') }}"></script>
{% endblock %}
